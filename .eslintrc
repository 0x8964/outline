{
  "parser": "babel-eslint",
  "extends": [
    "react-app",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:react-hooks/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "eqeqeq": 2,
    "no-unused-vars": 2,
    "no-mixed-operators": "off",
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        },
        "pathGroups": [
          {
            "pattern": "shared/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "stores",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "stores/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "models/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "scenes/**",
            "group": "external",
            "position": "after"
          },
          {
            "pattern": "components/**",
            "group": "external",
            "position": "after"
          }
        ]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "trailingComma": "es5"
      }
    ]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",
      "version": "detect"
    },
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".tsx"
      ]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      },
      "node": {
        "paths": [
          "app",
          "."
        ]
      }
    }
  },
  "env": {
    "jest": true
  },
  "globals": {
    "EDITOR_VERSION": true
  }
}